<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bignerdranch.android.animalgallery">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/dog_holding_heart"
        android:label="@string/app_name"
        android:roundIcon="@drawable/dog_holding_heart"
        android:supportsRtl="true"
        android:theme="@style/Theme.PhotoGallery">
        <activity
            android:name="com.bignerdranch.android.animalgallery.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
